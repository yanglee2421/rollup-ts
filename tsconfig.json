{
  "include": ["src"],
  "compilerOptions": {
    "types": [
      "node",
      "babel__core",
      "koa",
      "koa__router",
      "koa-bodyparser",
      "koa-static",
      "koa__cors"
    ],
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    // Build
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,

    // Bundler
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
