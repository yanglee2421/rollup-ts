{
  "include": ["src"],
  "compilerOptions": {
    "types": ["node", "express"],
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    // Build
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,

    // Bundler
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
